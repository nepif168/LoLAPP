<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
      <%= f.label "ユーザ名" %><br />
      <%= f.text_field :user_name %>
  </div>

  <div class="field">
    <%= f.label "変更後のパスワード（変更なしなら入力しなくていいです）" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上にしてください</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "変更後のパスワードを再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "現在のパスワード" %> <i>(設定の変更に必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p>削除 <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "このアカウントは削除されますが、よろしいですか？" }, method: :delete %></p>

<%= link_to "Back", :back %>
